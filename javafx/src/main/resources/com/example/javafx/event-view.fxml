<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx.EventController">
    <children>
        <Button fx:id="actionButton" text="Click Me" layoutX="50" layoutY="50" onAction="#handleActionEvent" />
        <TextField fx:id="textField" promptText="Type something" layoutX="50" layoutY="100" onKeyPressed="#handleKeyEvent" />
        <Label fx:id="label" text="Click or Type" layoutX="50" layoutY="150" onMouseClicked="#handleMouseEvent" />
    </children>
</AnchorPane>
